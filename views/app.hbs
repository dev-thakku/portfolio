<div class="container">
  <h1 class="text-center mt-3">URL Shortener</h1>
      
    <form class="mt-4" action="/url/create" method="POST">
      
      <div class="form-group">
        <label class="control-label" for="url">URL</label>
        <input type="text" class="form-control" name="url" placeholder="https://jemshith.tk" required>
      </div>
      
      <div class="form-group">
        <label for="slug" class="control-label">Slug</label>
        <input type="text" class="form-control" name="slug" placeholder="sometext">
      </div>
        
    <button type="submit" class="mt-3 btn btn-success">Create</button>
    
  </form>
</div>
 <div class="mt-3 table-responsive">
  <table class="table table-hover table-stripped">
    <thead class="table-dark ">
      <tr>
        <th scope="col">URL</th>
        <th scope="col">Shorter URL</th>
        <th scope="col">Clicks</th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <td><a href="https://jemshith.tk">shhd</a></a></td>
        <td><a href="/me">/me</a></td>
        <td>10</td>
      </tr>
    </tbody>
  </table>
      {{#each shortUrls}}
        <h1>{{this.fullUrl}}</h1>
        <h1>{{this.url}}</h1>
        <h1>{{this.clicks}}</h1>
      {{/each}}
</div>